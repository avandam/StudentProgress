@page
@model StudentProgress.Web.Pages.StudentGroups.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div>
    <a asp-page="Index">Groups</a> >
    <span>New</span>
</div>

<h1>Create</h1>

<h4>Group / Semester / Class</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StudentGroup.Name" class="control-label"></label>
                <input asp-for="StudentGroup.Name" class="form-control" />
                <span asp-validation-for="StudentGroup.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentGroup.Mnemonic" class="control-label"></label>
                <textarea asp-for="StudentGroup.Mnemonic" class="form-control"></textarea>
                <span asp-validation-for="StudentGroup.Mnemonic" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
