@page
@model StudentProgress.Web.Pages.StudentGroups.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

@if (@Model.Group.Students.Count > 0)
{
    <h3>Error</h3>
    <p>The group can not be deleted as there are still students in the group. Delete the students from the group and try again. <a asp-page="./Index">Back to List</a></p>
}
else
{
    <h3>Are you sure you want to delete this? </h3>

    <div>
        <h4>StudentGroup</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Group.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Group.Name.Value)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Group.CreatedDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Group.CreatedDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Group.UpdatedDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Group.UpdatedDate)
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Group.Id" />
            <input type="hidden" asp-for="Group.Name" />
            <input type="hidden" asp-for="Group.CreatedDate" />
            <input type="hidden" asp-for="Group.UpdatedDate" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-page="./Index">Back to List</a>
        </form>
    </div>
}
