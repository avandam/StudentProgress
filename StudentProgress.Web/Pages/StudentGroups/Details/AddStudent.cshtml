@page
@model StudentProgress.Web.Pages.StudentGroups.Details.AddStudentModel

@{
  ViewData["Title"] = "Create";
}

<a asp-page="./Index" asp-route-id="@Model.Group.Id">Back to Group</a>

<h1>Add student to @Model.Group.Name</h1>
<hr/>

<div class="row">
  <div class="col-md-4">
    <form method="post">
      <div asp-validation-summary="All" class="text-danger"></div>
      <input type="hidden" asp-for="Student.GroupId" value="@Model.Group.Id"/>
      @Html.FormBlock(m => m.Student.Name)
      <div class="form-group">
        <input type="submit" value="Add" class="btn btn-primary"/>
      </div>
    </form>
  </div>
</div>

@section Scripts {
  @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}